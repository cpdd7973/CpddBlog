<div class="cpdd-blog-banner shadow-sm p-4 rounded">
  <div class="row">
    <div class="col-6 text-center d-flex flex-column justify-content-center">
      <h1 class="banner-title text-start">Welcome to cpdd Blog</h1>
      <p class="banner-desc text-start">
       <%= description %>
      </p>
      <div class="text-start">
        <span class="date-string">
          <%= new Date().toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          }) %>
        </span>
      </div>
    </div>
  </div>
</div>