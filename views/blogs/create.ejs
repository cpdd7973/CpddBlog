<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>
  <body>
    <%- include('../partials/nav.ejs') %>
      <div class="create-blog m-5">
        <form action="/blogs" method="POST" class="px-5 d-flex flex-column justify-content-center">
          <div class="form-floating mb-3 mt-5">
            <input type="text" name="title" class="form-control" placeholder="Title" id="title" required>
            <label for="title">Blog Title</label>
          </div>
          <div class="form-floating mb-3">
            <input type="text" class="form-control" id="snippet" name="snippet" placeholder="Snippet" required>
            <label for="snippet">Blog Snippet</label>
          </div>
          <div class="form-floating mb-3">
            <textarea class="form-control" placeholder="Leave a comment here" id="body" name="body"
              style="height: 100px" required></textarea>
            <label for="body">Blog Body</label>
          </div>
          <div class="w-100 d-flex justify-content-center">
            <button type="submit" class="btn btn-danger w-25 fw-bold mb-3">Submit</button>
          </div>
        </form>
      </div>
      <%- include('../partials/footer.ejs') %>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
          integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
          crossorigin="anonymous"></script>
  </body>
</html>
